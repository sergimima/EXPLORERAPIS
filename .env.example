# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/explorer_db"

# NextAuth Configuration (Required)
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:4200"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Blockchain API Keys (Required for Basic Functionality)
# BaseScan API - Contract ABIs and blockchain data
NEXT_PUBLIC_BASESCAN_API_KEY="your-basescan-api-key"

# Etherscan V2 API - Transaction history for Base network
NEXT_PUBLIC_ETHERSCAN_API_KEY="your-etherscan-api-key"

# Routescan API - Multi-chain fallback for BaseScan
NEXT_PUBLIC_ROUTESCAN_API_KEY="your-routescan-api-key"

# Analytics & Advanced Features (Required for Analytics)
# Moralis API - Real-time holder data and token ownership
NEXT_PUBLIC_MORALIS_API_KEY="your-moralis-api-key"

# QuikNode - RPC provider and price data endpoints
NEXT_PUBLIC_QUICKNODE_URL="https://your-quicknode-endpoint.quiknode.pro/YOUR_KEY/"

# Email Service (Optional - for team invitations)
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Stripe Integration (Optional - for SaaS billing)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Application Configuration (Optional)
APP_NAME="TokenLens"
APP_URL="http://localhost:4200"
SUPPORT_EMAIL="support@yourdomain.com"

# Notes:
# 1. Copy this file to .env.local for development
# 2. Never commit .env.local to git (already in .gitignore)
# 3. Generate NEXTAUTH_SECRET: openssl rand -base64 32
# 4. Free tier API keys work for development
# 5. Production: Configure API keys in SystemSettings (Admin Panel)
